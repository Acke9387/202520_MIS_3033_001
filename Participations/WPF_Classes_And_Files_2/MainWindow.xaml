<Window x:Class="WPF_Classes_And_Files_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Classes_And_Files_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstSales" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="400,0,0,0"/>
        <ComboBox x:Name="cboPaymentType" HorizontalAlignment="Left" Margin="92,88,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboPaymentType_SelectionChanged"/>
        <Label Content="Select a payment type" HorizontalAlignment="Left" Margin="54,56,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSave" Content="Save Data" HorizontalAlignment="Left" Margin="130,327,0,0" VerticalAlignment="Top" Height="37" Width="101" Click="btnSave_Click"/>

    </Grid>
</Window>
